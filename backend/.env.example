# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tweetgarot_pm
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Anthropic API (Claude AI for chatbot)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Foursquare Places API (for business search when adding vendors)
# Get your free API key at https://foursquare.com/developers
FOURSQUARE_API_KEY=your_foursquare_api_key_here

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Cloudflare R2 Configuration (use either CLOUDFLARE_R2_* or R2_* prefix)
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_R2_ACCESS_KEY_ID=your_access_key_id_here
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret_access_key_here
CLOUDFLARE_R2_BUCKET_NAME=your_bucket_name_here
CLOUDFLARE_R2_REGION=auto
CLOUDFLARE_R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
CLOUDFLARE_R2_PUBLIC_URL=https://your-bucket.your-account-id.r2.cloudflarestorage.com

# OR use shorter R2_* prefix:
# R2_ACCOUNT_ID=your_account_id_here
# R2_ACCESS_KEY_ID=your_access_key_id_here
# R2_SECRET_ACCESS_KEY=your_secret_access_key_here
# R2_BUCKET_NAME=your_bucket_name_here
# R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# Email Configuration (SMTP)
# For Gmail: use smtp.gmail.com, port 587, and an App Password
# For Outlook: use smtp.office365.com, port 587
# For SendGrid: use smtp.sendgrid.net, port 587, username=apikey
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
EMAIL_FROM_NAME=Tweet Garot PM
EMAIL_FROM_ADDRESS=noreply@tweetgarot.com
